<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/gray_light"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/img_trend_main"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txt_trend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:text="Johan Maddan"
            android:textColor="@color/black_light"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_trend_main" />

        <TextView
            android:textSize="14sp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="4dp"
            android:id="@+id/txt_trend_subtitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="American Football \n Coch and commentator\n(1936_2021)"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_trend_title" />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_marginStart="32dp"
            android:textSize="12sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:id="@+id/txt_trend_insight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+280 k"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_trend_subtitel" />

        <TextView
            android:id="@+id/txt_trend_number"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:gravity="center"
            android:text="1"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textSize="12sp"
            android:background="@drawable/shape_circle"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_trend_insight" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>